@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutErrorPage";
}

<!-- Main Content -->
<div id="content">

    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- 404 Error Text -->
        <div class="text-center">
            <div class="error mx-auto" data-text="404">404</div>
            <p class="lead text-gray-800 mb-5">Page Not Found</p>
            <p class="text-gray-500 mb-0">It looks like you found a glitch in the matrix...</p>
            <p> You will be redirected to dashboard in <span id="time">5</span> seconds</p>
        </div>

    </div>
    <!-- /.container-fluid -->

</div>

@section Scripts {
    <script>
        var seconds = 5;
        window.onload = function () {
            var timer = setInterval(function () {
                if (seconds <= 0) {
                    document.getElementById("time").innerHTML = 0;
                    clearInterval(timer);
                } else {
                    document.getElementById("time").innerHTML = seconds - 1;
                }
                seconds -= 1;
            }, 1000);

            setTimeout(function () {
                window.location.href = "/SbAdmin";
            }, seconds * 1000);
        };
    </script>

    <script>

    </script>
}
